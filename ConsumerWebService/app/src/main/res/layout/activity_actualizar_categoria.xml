<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uta.fisei.consumerwebservice.ActualizarCategoria">
    <EditText
        android:id="@+id/txtcodigoUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese el codigo"
        android:maxLength="10">
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/txtshortnameUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="Ingrese nombre corto"
        android:layout_below="@+id/txtcodigoUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLength="15"/>

    <EditText
        android:id="@+id/txtlongnameUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="30"
        android:hint="Ingrese nombre largo"
        android:layout_below="@+id/txtshortnameUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:maxLength="50"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_below="@+id/txtlongnameUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/btnNuevo"
        android:layout_below="@+id/txtlongnameUp"
        android:layout_toRightOf="@+id/btnUpdate"
        android:layout_toEndOf="@+id/btnUpdate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detele"
        android:id="@+id/btnEliminar"
        android:layout_alignTop="@+id/btnNuevo"
        android:layout_toRightOf="@+id/btnNuevo"
        android:layout_toEndOf="@+id/btnNuevo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btnLimpiar"
        android:layout_below="@+id/btnUpdate"
        android:layout_toLeftOf="@+id/btnNuevo"
        android:layout_toStartOf="@+id/btnNuevo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_alignTop="@+id/txtcodigoUp"
        android:layout_toRightOf="@+id/txtcodigoUp"
        android:layout_toEndOf="@+id/txtcodigoUp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Todos"
        android:id="@+id/btnVerTodos"
        android:layout_below="@+id/btnNuevo"
        android:layout_alignLeft="@+id/btnNuevo"
        android:layout_alignStart="@+id/btnNuevo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btnSalir"
        android:layout_below="@+id/btnEliminar"
        android:layout_toRightOf="@+id/btnVerTodos"
        android:layout_toEndOf="@+id/btnVerTodos" />

</RelativeLayout>
